<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 d:DesignWidth="800"
			 d:DesignHeight="450"
			 x:Class="ComboBoxSample.Views.MainView">
	<Grid Margin="10"
		  RowDefinitions="*,*,*">
		<TextBlock Text="Hover the mouse pointer over the text to see a ToolTip"
				   TextWrapping="WrapWithOverflow"
				   Background="Yellow"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   ToolTip.Tip="This is a Text"/>

		<TextBlock Text="Hover the mouse pointer over the text to see a ToolTip Containing a Button"
				   Grid.Row="1"
				   TextWrapping="WrapWithOverflow"
				   Background="Yellow"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Top">
			<ToolTip.Tip>
				<Button Content="This is a Button"/>
			</ToolTip.Tip>
		</TextBlock>

		<Button Content="This Button Shows a ToolTip"
				Grid.Row="2"
				HorizontalAlignment="Center"
				VerticalAlignment="Top"
				ToolTip.Tip="This is a Text"/>
	</Grid>
</UserControl>
