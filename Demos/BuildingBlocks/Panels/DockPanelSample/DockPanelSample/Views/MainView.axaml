<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DockPanelSample.Views.MainView">
	<DockPanel>
		<Button Content="Right"
				Background="Pink"
				DockPanel.Dock="Right"/>
		<Button Content="Left"
				Background="LightBlue"
				DockPanel.Dock="Left"/>
		<Button Content="Top"
				Background="Yellow"
				DockPanel.Dock="Top"/>
		<Button Content="Bottom"
				Background="LightGreen"
				DockPanel.Dock="Bottom"/>
		<Button Content="Another Left"
				Background="LightBlue"
				DockPanel.Dock="Left"/>
		<Button Content="Another Top"
				Background="Yellow"
				DockPanel.Dock="Top"/>
		<Button Content="Left Over"
				Background="LightGray"/>
	</DockPanel>
</UserControl>
