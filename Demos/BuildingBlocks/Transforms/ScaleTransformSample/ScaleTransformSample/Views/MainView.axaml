<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="RotateTransformSample.Views.MainView">
	<Grid Margin="10"
		  ColumnDefinitions="*,*"
		  ShowGridLines="True">
		<StackPanel HorizontalAlignment="Left">
			<Grid RowDefinitions="Auto,Auto"
				  Margin="0,10">
				<TextBlock Text="{Binding #ScaleXSlider.Value, StringFormat='ScaleX=\{0:0.00\}'}"
						   HorizontalAlignment="Left"
						   FontSize="16"
						   FontWeight="Bold"
						   Margin="5,0,0,0"/>

				<Slider x:Name="ScaleXSlider"
						Grid.Row="1"
						Width="200"
						Value="1"
						Minimum="-2"
						Maximum="2"
						HorizontalAlignment="Left"/>
			</Grid>
			<Grid RowDefinitions="Auto,Auto"
				  Margin="0,10">
				<TextBlock Text="{Binding #ScaleYSlider.Value, StringFormat='ScaleY=\{0:0.00\}'}"
						   HorizontalAlignment="Left"
						   FontSize="16"
						   FontWeight="Bold"
						   Margin="5,0,0,0"/>
				<Slider x:Name="ScaleYSlider"
						Grid.Row="1"
						Width="200"
						Value="1"
						Minimum="-2"
						Maximum="2"
						HorizontalAlignment="Left"/>
			</Grid>
		</StackPanel>
		
		<Grid Grid.Column="1">
			<TextBlock Background="Pink"
					   Width="100"
					   Height="40"
					   Text="Hello World!"
					   RenderTransformOrigin="0%,50%"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   FontSize="14"
					   FontWeight="Bold"
					   Padding="9,10">
				<TextBlock.RenderTransform>
					<ScaleTransform ScaleX="{Binding #ScaleXSlider.Value}"
									ScaleY="{Binding #ScaleYSlider.Value}"/>
				</TextBlock.RenderTransform>
			</TextBlock>

			<Rectangle Width="100"
					   Height="40"
					   Stroke="Black"
					   StrokeThickness="2"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"/>
		</Grid>
	</Grid>
</UserControl>
