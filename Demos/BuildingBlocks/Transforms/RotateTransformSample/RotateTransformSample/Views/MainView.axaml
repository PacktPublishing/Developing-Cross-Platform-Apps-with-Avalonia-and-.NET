<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="RotateTransformSample.Views.MainView">
	<Grid Margin="10"
		  ColumnDefinitions="*,*"
		  ShowGridLines="True">
		<StackPanel HorizontalAlignment="Left">
			<Grid RowDefinitions="Auto,Auto"
				  Margin="0,10">
				<TextBlock Text="{Binding #Angle.Value, StringFormat='Angle=\{0:0.00\}Â°'}"
						   HorizontalAlignment="Left"
						   FontSize="16"
						   FontWeight="Bold"
						   Margin="5,0,0,0"/>

				<Slider x:Name="Angle"
						Grid.Row="1"
						Width="200"
						Minimum="-180"
						Maximum="180"
						HorizontalAlignment="Left"/>
			</Grid>

			<Grid RowDefinitions="Auto,Auto"
				  Margin="0,10">
				<TextBlock Text="{Binding #XSlider.Value, StringFormat='CenterX=\{0:0.00\}'}"
						   HorizontalAlignment="Left"
						   FontSize="16"
						   FontWeight="Bold"
						   Margin="5,0,0,0"/>
				
				<Slider x:Name="XSlider"
						Grid.Row="1"
						Width="200"
						Minimum="-50"
						Maximum="50"
						HorizontalAlignment="Left"/>
			</Grid>
			<Grid RowDefinitions="Auto,Auto"
				  Margin="0,10">
				<TextBlock Text="{Binding #YSlider.Value, StringFormat='CenterY=\{0:0.00\}'}"
						   HorizontalAlignment="Left"
						   FontSize="16"
						   FontWeight="Bold"
						   Margin="5,0,0,0"/>
				<Slider x:Name="YSlider"
						Grid.Row="1"
						Width="200"
						Minimum="-20"
						Maximum="20"
						HorizontalAlignment="Left"/>
			</Grid>
		</StackPanel>
		
		<Grid Grid.Column="1">
			<Rectangle Fill="Pink"
					   Width="100"
					   Height="40"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center">
				<Rectangle.RenderTransform>
					<RotateTransform Angle="{Binding #Angle.Value}"
									 CenterX="{Binding #XSlider.Value}"
									 CenterY="{Binding #YSlider.Value}"/>
				</Rectangle.RenderTransform>
			</Rectangle>

			<Rectangle Width="100"
					   Height="40"
					   Stroke="Black"
					   StrokeThickness="2"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"/>
		</Grid>
	</Grid>
</UserControl>
