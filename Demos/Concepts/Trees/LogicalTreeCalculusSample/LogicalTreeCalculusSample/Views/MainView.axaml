<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LogicalTreeCalculusSample.Views.MainView">
	<Grid ColumnDefinitions="100, Auto *">
		<ToggleSwitch x:Name="TheToggleSwitch"
					  HorizontalAlignment="Center"
					  VerticalAlignment="Center"/>
		<Grid Width="2"
			  Grid.Column="1"
			  VerticalAlignment="Stretch"
			  Background="Black"/>
		<Grid Grid.Column="2"
			  RowDefinitions="Auto, Auto, Auto, Auto"
			  ColumnDefinitions="Auto, *"
			  ShowGridLines="True"
			  Margin="10,0,0,0">
				<Button x:Name="GetLogicalParentButton"
						Content="GetLogicalParent()"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						Margin="0,10,10,10"/>
				<TextBlock x:Name="LogicalParentTextBlock"
						   Grid.Column="1"
						   Margin="10,10,0,10"
						   HorizontalAlignment="Left"
						   VerticalAlignment="Center"/>

			<Button x:Name="GetLogicalAncestorsButton"
					Grid.Row="1"
					Content="GetLogicalAncestors()"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="0,10,10,10"/>
			<ListBox x:Name="AncestorsListBox"
					 Grid.Row="1"
					 Grid.Column="1"
					 Margin="10"
					 MaxHeight="70"
					 HorizontalAlignment="Stretch"
					 VerticalAlignment="Center"/>

			<Button x:Name="GetLogicalChildrenButton"
					Grid.Row="2"
					Content="GetLogicalChildren()"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="0,10,10,10"/>
			<ListBox x:Name="ChildrenListBox"
					 Grid.Row="2"
					 Grid.Column="1"
					 Margin="10"
					 MaxHeight="70"
					 HorizontalAlignment="Stretch"
					 VerticalAlignment="Center"/>

			<Button x:Name="GetLogicalDescendantsButton"
					Grid.Row="3"
					Content="GetLogicalDescendants()"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="0,10,10,10"/>
			<ListBox x:Name="DescendantsListBox"
					 Grid.Row="3"
					 Grid.Column="1"
					 Margin="10"
					 MaxHeight="70"
					 HorizontalAlignment="Stretch"
					 VerticalAlignment="Center"/>
		</Grid>
	</Grid>
</UserControl>
